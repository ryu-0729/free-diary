<% if diary.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">
      <%= pluralize(diary.errors.count, "error") %>
    </h4>
    <hr>
    <p class="mb-0">
      <% diary.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </p>
  </div>
<% end %>
